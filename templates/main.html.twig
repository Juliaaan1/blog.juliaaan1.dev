{% extends "base.html.twig" %}

{% block title %} Blog {% endblock %}

{% block body %}
<div class="container">
    {% for post in posts %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">[{{ post.id }}] {{ post.title }}</h5>
                <p class="card-text">{{ post.text }}</p>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}