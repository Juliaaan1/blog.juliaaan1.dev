<div class="row tag-cloud">
    {% if (activeTag) %}
        <p
                class="col-auto tag"
                hx-get="/posts?tag="
                hx-target="#content"
                hx-swap="innerHTML"
        >
            <span>&#10005;</span>
        </p>
    {% endif %}

    {% for tag in tags %}
        {% if (tag.tag == activeTag) %}
            <div class="col-auto tag active">
                <span>{{ tag.tag }}</span>
            </div>
        {% else %}
            <p
                    class="col-auto tag"
                    hx-get="/posts?tag={{ tag.tag }}"
                    hx-target="#content"
                    hx-swap="innerHTML"
            >
                <span>{{ tag.tag }}</span>
            </p>
        {% endif %}
    {% endfor %}
</div>

{% for post in posts %}
    <div class="row post">
        <div class="col-auto created">[{{ post.created | date("d.m.Y H:i") }}]</div>
        <div class="col-auto author">juliaaan1@home</div>
        <div class="col-auto tag">{{ post.tag }}</div>
        <div class="col-auto title">{{ post.title }}</div>
        <div class="text">{{ post.text | nl2br }}</div>
    </div>
{% endfor %}